<?xml version="1.0" encoding="utf-8"?>
<!--
    This is the Pokemon Species search and select screen
        row 1 is screen description
        row 2 is search input
        row 3 is search output
        row 4 is cancel/confirm
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:gravity="center"
              android:orientation="vertical"
              android:background="#7f7f7f"
              android:focusableInTouchMode="false">

    <!-- row 1 - screen description -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Select the Pokemon's Species"
        android:textSize="20sp"
        android:id="@+id/species_description"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#858585"/>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#5f5f5f">
    <!-- row 2 search input -->
    <EditText
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="textCapWords"
        android:text="Search..."
        android:textSize="20sp"
        android:id="@+id/species_input"
        android:hapticFeedbackEnabled="true"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="true"
        android:selectAllOnFocus="true"
        android:onClick="onOpenIME"
        android:gravity="center|start"
        android:background="#858585"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Ok"
        android:textSize="20sp"
        android:id="@+id/species_confirm"
        android:hapticFeedbackEnabled="true"
        android:gravity="center"
        android:onClick="onSpeciesConfirm"
        android:background="#858585"/>

    </LinearLayout>
    <!-- row 3 - search output -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#5f5f5f">

        <ImageView
            android:id="@+id/species_spacer_top"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#007F00"
            android:clickable="true"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result1"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult1"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result2"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult2"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result3"
            android:hapticFeedbackEnabled="true"
            android:onClick="onResult3"
            android:gravity="center_vertical"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result4"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult4"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result5"
            android:hapticFeedbackEnabled="true"
            android:onClick="onResult5"
            android:gravity="center_vertical"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result6"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult6"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result7"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult7"
            android:background="#858585"
            android:text=""/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:id="@+id/species_result8"
            android:hapticFeedbackEnabled="true"
            android:gravity="center_vertical"
            android:onClick="onResult8"
            android:background="#858585"
            android:text=""/>

        <ImageView
            android:id="@+id/species_spacer_bottom"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#007F00"
            android:clickable="true"/>
    </LinearLayout> <!-- end row 3 - search output -->

    <TextView
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="cancel"
        android:textSize="20sp"
        android:id="@+id/species_cancel"
        android:hapticFeedbackEnabled="true"
        android:gravity="center"
        android:onClick="onSpeciesCancel"
        android:background="#858585"/>

</LinearLayout>